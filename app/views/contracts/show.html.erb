<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @contract %>

    <%= link_to "Voltar para Contratos", contracts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Editar Contrato", edit_contract_path(@contract), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
    <div class="inline-block ml-2 mt-2 rounded-lg py-3 px-5 bg-red-500 font-medium text-white">
      <%= link_to "Deletar Contrato", @contract, data: { turbo_method: :delete, turbo_confirm:  "Tem certeza que deseja deletar esse contrato?" } %>
    </div>
  </div>
</div>
