<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editar Contrato</h1>

  <%= form_with(model: @contract, class: "contents") do |form| %>
    <% if @contract.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <ul>
          <% @contract.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :apartment_id, value: @contract.id %>

    <div class="my-5">
      <p class="mb-2"><%= form.label :tenant_id, "Status do Contrato" %></p>
      <%= form.select :status, 
                      Contract.statuses.keys.map { |status| [I18n.t("#{status}"), status] },
                      { prompt: "Selecione o status do contrato" }, 
                      { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
    </div>

    <div class="inline text-center">
      <%= form.submit "Atualizar Contrato", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "Voltar para Contrato", @contract, class: "text-center ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
